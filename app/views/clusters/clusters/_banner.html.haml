.hidden.js-cluster-error.bs-callout.bs-callout-danger{ role: 'alert' }
  = s_('ClusterIntegration|Something went wrong while creating your Kubernetes cluster on Google Kubernetes Engine')
  %p.js-error-reason

.hidden.js-cluster-creating.bs-callout.bs-callout-info{ role: 'alert' }
  = s_('ClusterIntegration|Kubernetes cluster is being created on Google Kubernetes Engine...')

.hidden.js-cluster-api-unreachable.bs-callout.bs-callout-warning{ role: 'alert' }
  = s_('ClusterIntegration|Your cluster API is unreachable. Please ensure your API URL is correct.')
  %button.js-close-banner.close.cluster-application-banner-close.m-0= "×"

.hidden.row.js-cluster-service-account-failure.bs-callout.bs-callout-warning{ role: 'alert' }
  .col-11
    - privileges_url_start = '<a href="%{url}" target="_blank" rel="noopener noreferrer"><strong>'.html_safe % { url: help_page_path('user/project/clusters/index', anchor: 'access-controls') }
    - privilege = '<code>cluster-admin</code>'.html_safe
    = s_('ClusterIntegration|A service account could not be created for your cluster. This may cause deployments to fail. Please ensure your token has %{privilege} privileges. %{privileges_url_start}More information%{privileges_url_end}').html_safe % { privilege: privilege, privileges_url_start: privileges_url_start, privileges_url_end: '</strong></a>'.html_safe }
  .col-1.p-0
    %button.js-close-banner.close.cluster-application-banner-close.h-100.m-0= "×"

.hidden.js-cluster-authentication-failure.bs-callout.bs-callout-warning{ role: 'alert' }
  = s_('ClusterIntegration|There was a problem authenticating with your cluster. Please ensure your CA Certificate and Token are valid.')
  %button.js-close-banner.close.cluster-application-banner-close.m-0= "×"

.hidden.js-cluster-success.bs-callout.bs-callout-success{ role: 'alert' }
  = s_("ClusterIntegration|Kubernetes cluster was successfully created on Google Kubernetes Engine. Refresh the page to see Kubernetes cluster's details")
